{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "demo",
    "labels": {
      "app": "demo"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "app": "demo"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "demo"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "demo",
            "image": "lreszegi/demo:0.2.1",
            "ports": [
              {
                "name": "http-server",
                "containerPort": 8080
              }
            ]
          }
        ]
      }
    }
  }
}